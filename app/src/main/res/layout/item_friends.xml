<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_item_friend"
        android:src="@color/contents87"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="16dp"
        android:layout_gravity="center"
        app:shapeAppearanceOverlay="@style/roundedImageView"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_name_friend"
        android:textColor="@color/contents87"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/image_item_friend"
        app:layout_constraintTop_toTopOf="@id/image_item_friend"
        app:layout_constraintBottom_toBottomOf="@id/image_item_friend"
        app:layout_constraintEnd_toStartOf="@+id/btn_subscribe"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginVertical="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButtonText"
        app:layout_constraintTop_toTopOf="@id/tv_name_friend"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_friend"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="4dp"
        android:gravity="center|end"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="72dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>