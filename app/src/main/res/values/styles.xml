<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/contents87</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/grey</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/outline</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="RcText">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/outline</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>

    <style name="HeadlinesText">
        <item name="android:textColor">@color/contents87</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:lineSpacingExtra">2sp</item>

    </style>

    <style name="Choose">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/outline</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/contents87</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="CounterEditText">
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:translationY">-0.74sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="AboutText">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.74sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/purple_200</item>
        <item name="backgroundTint">@color/background</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="fontFamily">@font/inter</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@color/bar_friends</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

</resources>